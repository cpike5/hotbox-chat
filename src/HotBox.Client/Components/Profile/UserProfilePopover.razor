@inject ApiClient ApiClient
@inject AuthState AuthState
@inject NavigationManager Navigation
@inject PresenceState PresenceState
@inject IJSRuntime JS
@implements IDisposable

<div class="profile-popover-backdrop"
     tabindex="-1"
     @onclick="HandleBackdropClick"
     @onkeydown="HandleKeyDown"
     @ref="_backdropRef">
    <div class="profile-popover" style="@_positionStyle" @onclick:stopPropagation="true">
        @if (_isLoading)
        {
            <!-- Loading skeleton -->
            <div class="profile-popover-header">
                <div class="profile-popover-avatar-wrapper">
                    <div class="skeleton skeleton-avatar" style="width: 64px; height: 64px;"></div>
                </div>
                <div class="profile-popover-identity">
                    <div class="skeleton skeleton-text medium" style="height: 15px; margin-bottom: 6px;"></div>
                    <div class="skeleton skeleton-text short" style="height: 12px;"></div>
                </div>
            </div>
            <div class="profile-popover-body">
                <div class="skeleton skeleton-text" style="width: 50px; height: 10px; margin-bottom: 8px;"></div>
                <div class="skeleton skeleton-text long" style="height: 12px; margin-bottom: 4px;"></div>
                <div class="skeleton skeleton-text medium" style="height: 12px;"></div>
            </div>
        }
        else if (_profile is not null)
        {
            <!-- Header: avatar + identity -->
            <div class="profile-popover-header">
                <div class="profile-popover-avatar-wrapper">
                    <div class="profile-popover-avatar" style="background: @GetAvatarColor(_profile.DisplayName);" aria-hidden="true">
                        @GetInitials(_profile.DisplayName)
                    </div>
                    <span class="status-dot @GetStatusCssClass(_liveStatus)" aria-hidden="true"></span>
                </div>
                <div class="profile-popover-identity">
                    <div class="profile-popover-name-row">
                        <span class="profile-popover-name">@_profile.DisplayName</span>
                        @if (_profile.IsAgent)
                        {
                            <span class="bot-badge" aria-hidden="true">BOT</span>
                        }
                    </div>
                    @if (!string.IsNullOrWhiteSpace(_profile.Pronouns))
                    {
                        <span class="profile-popover-pronouns">@_profile.Pronouns</span>
                    }
                    @if (!string.IsNullOrWhiteSpace(_profile.CustomStatus))
                    {
                        <span class="profile-popover-status">@_profile.CustomStatus</span>
                    }
                </div>
            </div>

            <!-- Role badge -->
            <div class="profile-popover-role-row">
                <span class="profile-popover-role-badge @GetRoleBadgeClass(_profile.Role)">@_profile.Role</span>
            </div>

            <!-- Bio section -->
            @if (!string.IsNullOrWhiteSpace(_profile.Bio))
            {
                <div class="profile-popover-section">
                    <span class="profile-popover-section-label">ABOUT</span>
                    <p class="profile-popover-bio">@_profile.Bio</p>
                </div>
            }

            <!-- Member since -->
            <div class="profile-popover-section">
                <span class="profile-popover-section-label">MEMBER SINCE</span>
                <span class="profile-popover-date">@_profile.CreatedAtUtc.ToLocalTime().ToString("MMMM d, yyyy")</span>
            </div>

            <!-- Send Message button (only for other users) -->
            @if (!_isSelf)
            {
                <div class="profile-popover-actions">
                    <button class="btn btn-primary profile-popover-msg-btn" @onclick="HandleSendMessage">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="14" height="14">
                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                        </svg>
                        Send Message
                    </button>
                </div>
            }
        }
    </div>
</div>

@code {
    [Parameter] public Guid UserId { get; set; }

    [Parameter] public double AnchorX { get; set; }

    [Parameter] public double AnchorY { get; set; }

    [Parameter] public EventCallback OnClose { get; set; }

    private ElementReference _backdropRef;
    private UserProfileResponse? _profile;
    private bool _isLoading = true;
    private bool _isSelf;
    private string _liveStatus = "Offline";
    private string _positionStyle = "visibility: hidden;";
    private CancellationTokenSource? _loadCts;

    protected override async Task OnInitializedAsync()
    {
        PresenceState.OnChange += OnPresenceChanged;


        _isSelf = AuthState.CurrentUser?.Id == UserId;
        _liveStatus = PresenceState.GetStatus(UserId);

        _loadCts = new CancellationTokenSource();
        _isLoading = true;

        try
        {
            _profile = await ApiClient.GetUserProfileAsync(UserId, _loadCts.Token);
        }
        catch (TaskCanceledException)
        {
            // Component disposed before load completed
        }
        finally
        {
            _isLoading = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var viewport = await JS.InvokeAsync<ViewportSize>("chatInterop.getViewportSize");
                _positionStyle = ComputePosition(viewport.Width, viewport.Height);
                StateHasChanged();
            }
            catch
            {
                // JS interop may not be available yet
            }

            try
            {
                await _backdropRef.FocusAsync();
            }
            catch
            {
                // Element may not be focusable yet
            }
        }
    }

    private string ComputePosition(double vpWidth, double vpHeight)
    {
        const double popoverWidth = 300;
        const double popoverMaxHeight = 420;
        const double gap = 12;
        const double topbarHeight = 52;

        double left = AnchorX + gap;
        double top = AnchorY - 40;

        // Flip to left side if would overflow right
        if (left + popoverWidth > vpWidth - 12)
            left = AnchorX - popoverWidth - gap;

        // Clamp to viewport vertically
        top = Math.Max(topbarHeight + 8, top);
        if (top + popoverMaxHeight > vpHeight - 12)
            top = vpHeight - popoverMaxHeight - 12;

        return $"left: {left:F0}px; top: {top:F0}px;";
    }

    private record ViewportSize(double Width, double Height);

    private void OnPresenceChanged()
    {
        var newStatus = PresenceState.GetStatus(UserId);
        if (newStatus != _liveStatus)
        {
            _liveStatus = newStatus;
            InvokeAsync(StateHasChanged);
        }
    }

    private void HandleBackdropClick()
    {
        OnClose.InvokeAsync();
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Escape")
        {
            OnClose.InvokeAsync();
        }
    }

    private void HandleSendMessage()
    {
        OnClose.InvokeAsync();
        Navigation.NavigateTo($"/dm/{UserId}");
    }

    private static string GetStatusCssClass(string status)
    {
        return status switch
        {
            "Online" => "online",
            "Idle" => "idle",
            "DoNotDisturb" => "dnd",
            "Offline" => "offline",
            _ => "offline"
        };
    }

    private static string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "role-admin",
            "Moderator" => "role-mod",
            _ => "role-member"
        };
    }

    private static string GetAvatarColor(string name)
    {
        int hash = 0;
        foreach (char c in name)
        {
            hash = c + ((hash << 5) - hash);
        }
        int hue = Math.Abs(hash) % 360;
        return $"hsl({hue}, 32%, 38%)";
    }

    private static string GetInitials(string displayName)
    {
        var parts = displayName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return displayName.Length >= 2
            ? displayName[..2].ToUpper()
            : displayName.ToUpper();
    }

    public void Dispose()
    {
        PresenceState.OnChange -= OnPresenceChanged;
        _loadCts?.Cancel();
        _loadCts?.Dispose();
    }
}

<style>
    .profile-popover-backdrop {
        position: fixed;
        inset: 0;
        z-index: 55;
        outline: none;
    }

    .profile-popover {
        position: fixed;
        width: 300px;
        max-height: calc(100vh - 64px);
        overflow-y: auto;
        background: var(--bg-raised);
        border: 1px solid var(--border-light);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-overlay);
        z-index: 55;
        animation: profile-popover-in var(--transition-smooth) forwards;
        margin-top: 0.5em;
        margin-bottom: 1em;
    }

    @@keyframes profile-popover-in {
        from {
            opacity: 0;
            transform: scale(0.96) translateY(-4px);
        }
        to {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }

    .profile-popover-header {
        display: flex;
        gap: 14px;
        padding: 20px 20px 0;
    }

    .profile-popover-avatar-wrapper {
        position: relative;
        flex-shrink: 0;
    }

    .profile-popover-avatar {
        width: 64px;
        height: 64px;
        border-radius: var(--radius-pill);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        font-weight: 700;
        color: #fff;
    }

    .profile-popover-avatar-wrapper > .status-dot {
        position: absolute;
        bottom: 2px;
        right: 2px;
        width: 14px;
        height: 14px;
        border-radius: var(--radius-pill);
        border: 3px solid var(--bg-raised);
    }

    .profile-popover-identity {
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-width: 0;
        gap: 2px;
    }

    .profile-popover-name-row {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .profile-popover-name {
        font-size: 15px;
        font-weight: 600;
        color: var(--text-primary);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .profile-popover-pronouns {
        font-size: 12px;
        color: var(--text-muted);
    }

    .profile-popover-status {
        font-size: 13px;
        color: var(--text-secondary);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .profile-popover-role-row {
        padding: 10px 20px 0;
    }

    .profile-popover-role-badge {
        display: inline-flex;
        align-items: center;
        font-family: var(--font-mono);
        font-size: 10px;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.04em;
        padding: 3px 8px;
        border-radius: var(--radius-sm);
        white-space: nowrap;
    }

    .profile-popover-role-badge.role-admin {
        background: var(--accent-muted);
        color: var(--accent);
    }

    .profile-popover-role-badge.role-mod {
        background: rgba(160, 140, 220, 0.12);
        color: #a08cdc;
    }

    .profile-popover-role-badge.role-member {
        background: var(--bg-surface);
        color: var(--text-muted);
    }

    .profile-popover-section {
        padding: 12px 20px 0;
    }

    .profile-popover-section-label {
        display: block;
        font-family: var(--font-mono);
        font-size: 10px;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.06em;
        color: var(--text-muted);
        margin-bottom: 4px;
        user-select: none;
    }

    .profile-popover-bio {
        font-size: 13px;
        color: var(--text-secondary);
        line-height: 1.5;
        word-wrap: break-word;
    }

    .profile-popover-date {
        font-size: 13px;
        color: var(--text-secondary);
    }

    .profile-popover-actions {
        padding: 16px 20px 20px;
    }

    .profile-popover-msg-btn {
        width: 100%;
        justify-content: center;
    }
</style>
