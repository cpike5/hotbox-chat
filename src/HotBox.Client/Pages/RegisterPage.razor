@page "/register"
@layout AuthLayout
@inject ApiClient ApiClient
@inject AuthState AuthState
@inject NavigationManager Navigation

<PageTitle>Register - HotBox</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-card-header">
            <span class="auth-card-brand">HotBox</span>
            <h1>Create an account</h1>
            <p>Join the server and start chatting</p>
        </div>

        @if (_registrationMode == RegistrationMode.Open)
        {
            <div class="reg-banner open">
                <svg class="reg-banner-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
                <span>Registration is currently open</span>
            </div>
        }
        else if (_registrationMode == RegistrationMode.InviteOnly)
        {
            <div class="reg-banner invite">
                <svg class="reg-banner-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12.01" y2="16"></line></svg>
                <span>An invite code is required to register</span>
            </div>
        }
        else if (_registrationMode == RegistrationMode.Closed)
        {
            <div class="reg-banner closed">
                <svg class="reg-banner-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line></svg>
                <span>Registration is currently closed</span>
            </div>
        }

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="auth-alert">
                <span>@_errorMessage</span>
            </div>
        }

        @if (_registrationMode != RegistrationMode.Closed)
        {
            <form @onsubmit="HandleSubmitAsync" novalidate>
                <div class="form-group @(_usernameError is not null ? "has-error" : "")">
                    <label class="form-label">Username</label>
                    <input class="form-input"
                           type="text"
                           placeholder="Choose a username"
                           autocomplete="username"
                           @bind="_username"
                           @bind:event="oninput"
                           @bind:after="ClearUsernameError"
                           disabled="@_isSubmitting" />
                    @if (_usernameError is not null)
                    {
                        <div class="form-error">@_usernameError</div>
                    }
                </div>

                <div class="form-group @(_emailError is not null ? "has-error" : "")">
                    <label class="form-label">Email</label>
                    <input class="form-input"
                           type="email"
                           placeholder="you@example.com"
                           autocomplete="email"
                           @bind="_email"
                           @bind:event="oninput"
                           @bind:after="ClearEmailError"
                           disabled="@_isSubmitting" />
                    @if (_emailError is not null)
                    {
                        <div class="form-error">@_emailError</div>
                    }
                </div>

                <div class="form-group @(_passwordError is not null ? "has-error" : "")">
                    <label class="form-label">Password</label>
                    <div class="input-wrapper">
                        <input class="form-input"
                               type="@(_showPassword ? "text" : "password")"
                               placeholder="Create a password"
                               autocomplete="new-password"
                               @bind="_password"
                               @bind:event="oninput"
                               @bind:after="ClearPasswordError"
                               disabled="@_isSubmitting" />
                        <button type="button" class="toggle-password" @onclick="TogglePasswordVisibility">
                            @if (_showPassword)
                            {
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line></svg>
                            }
                            else
                            {
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                            }
                        </button>
                    </div>
                    @if (_passwordError is not null)
                    {
                        <div class="form-error">@_passwordError</div>
                    }
                </div>

                <div class="form-group @(_confirmPasswordError is not null ? "has-error" : "")">
                    <label class="form-label">Confirm Password</label>
                    <div class="input-wrapper">
                        <input class="form-input"
                               type="@(_showConfirmPassword ? "text" : "password")"
                               placeholder="Confirm your password"
                               autocomplete="new-password"
                               @bind="_confirmPassword"
                               @bind:event="oninput"
                               @bind:after="ClearConfirmPasswordError"
                               disabled="@_isSubmitting" />
                        <button type="button" class="toggle-password" @onclick="ToggleConfirmPasswordVisibility">
                            @if (_showConfirmPassword)
                            {
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line></svg>
                            }
                            else
                            {
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                            }
                        </button>
                    </div>
                    @if (_confirmPasswordError is not null)
                    {
                        <div class="form-error">@_confirmPasswordError</div>
                    }
                </div>

                @if (_registrationMode == RegistrationMode.InviteOnly)
                {
                    <div class="form-group @(_inviteCodeError is not null ? "has-error" : "")">
                        <label class="form-label">Invite Code</label>
                        <input class="form-input"
                               type="text"
                               placeholder="Enter your invite code"
                               autocomplete="off"
                               style="font-family: var(--font-mono); letter-spacing: 0.08em;"
                               @bind="_inviteCode"
                               @bind:event="oninput"
                               @bind:after="ClearInviteCodeError"
                               disabled="@_isSubmitting" />
                        @if (_inviteCodeError is not null)
                        {
                            <div class="form-error">@_inviteCodeError</div>
                        }
                    </div>
                }

                <button type="submit" class="btn-submit" disabled="@_isSubmitting">
                    @if (_isSubmitting)
                    {
                        <span class="btn-loading"><span class="spinner"></span> Creating account...</span>
                    }
                    else
                    {
                        <span>Create Account</span>
                    }
                </button>
            </form>

            @if (_providers.Count > 0)
            {
                <div class="auth-divider">
                    <span>or continue with</span>
                </div>

                <div class="oauth-buttons">
                    @foreach (var provider in _providers)
                    {
                        <button type="button" class="btn-oauth" disabled="@_isSubmitting"
                                @onclick="() => StartOAuth(provider.Name)">
                            @if (string.Equals(provider.Name, "Google", StringComparison.OrdinalIgnoreCase))
                            {
                                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/>
                                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                                </svg>
                            }
                            else if (string.Equals(provider.Name, "Microsoft", StringComparison.OrdinalIgnoreCase))
                            {
                                <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <rect x="1" y="1" width="10" height="10" fill="#F25022"/>
                                    <rect x="13" y="1" width="10" height="10" fill="#7FBA00"/>
                                    <rect x="1" y="13" width="10" height="10" fill="#00A4EF"/>
                                    <rect x="13" y="13" width="10" height="10" fill="#FFB900"/>
                                </svg>
                            }
                            <span>Continue with @provider.Name</span>
                        </button>
                    }
                </div>
            }
        }
    </div>

    <div class="auth-footer">
        Already have an account? <a href="/login">Sign in</a>
    </div>
</div>

@code {
    private string _username = string.Empty;
    private string _email = string.Empty;
    private string _password = string.Empty;
    private string _confirmPassword = string.Empty;
    private string _inviteCode = string.Empty;

    private string? _usernameError;
    private string? _emailError;
    private string? _passwordError;
    private string? _confirmPasswordError;
    private string? _inviteCodeError;
    private string? _errorMessage;

    private bool _isSubmitting;
    private bool _showPassword;
    private bool _showConfirmPassword;
    private RegistrationMode _registrationMode = RegistrationMode.Open;
    private List<ProviderInfo> _providers = new();

    protected override async Task OnInitializedAsync()
    {
        if (AuthState.IsAuthenticated)
        {
            Navigation.NavigateTo("/", replace: true);
            return;
        }

        var modeTask = ApiClient.GetRegistrationModeAsync();
        var providersTask = ApiClient.GetProvidersAsync();

        await Task.WhenAll(modeTask, providersTask);

        var modeResponse = await modeTask;
        if (modeResponse is not null
            && Enum.TryParse<RegistrationMode>(modeResponse.Mode, ignoreCase: true, out var mode))
        {
            _registrationMode = mode;
        }

        _providers = await providersTask;
    }

    private bool Validate()
    {
        var isValid = true;

        // Username: required, 3-20 characters
        if (string.IsNullOrWhiteSpace(_username))
        {
            _usernameError = "Username is required (3-20 characters)";
            isValid = false;
        }
        else if (_username.Trim().Length < 3 || _username.Trim().Length > 20)
        {
            _usernameError = "Username must be between 3 and 20 characters";
            isValid = false;
        }
        else
        {
            _usernameError = null;
        }

        // Email: required, basic format check
        if (string.IsNullOrWhiteSpace(_email))
        {
            _emailError = "Please enter a valid email address";
            isValid = false;
        }
        else if (!_email.Contains('@') || !_email.Contains('.'))
        {
            _emailError = "Please enter a valid email address";
            isValid = false;
        }
        else
        {
            _emailError = null;
        }

        // Password: required, min 8 characters
        if (string.IsNullOrWhiteSpace(_password))
        {
            _passwordError = "Password must be at least 8 characters";
            isValid = false;
        }
        else if (_password.Length < 8)
        {
            _passwordError = "Password must be at least 8 characters";
            isValid = false;
        }
        else
        {
            _passwordError = null;
        }

        // Confirm password: must match
        if (_confirmPassword != _password)
        {
            _confirmPasswordError = "Passwords do not match";
            isValid = false;
        }
        else
        {
            _confirmPasswordError = null;
        }

        // Invite code: required when mode is InviteOnly
        if (_registrationMode == RegistrationMode.InviteOnly
            && string.IsNullOrWhiteSpace(_inviteCode))
        {
            _inviteCodeError = "A valid invite code is required";
            isValid = false;
        }
        else
        {
            _inviteCodeError = null;
        }

        return isValid;
    }

    private async Task HandleSubmitAsync()
    {
        _errorMessage = null;

        if (!Validate())
        {
            return;
        }

        _isSubmitting = true;

        try
        {
            var inviteCode = _registrationMode == RegistrationMode.InviteOnly
                ? _inviteCode.Trim()
                : null;

            var response = await ApiClient.RegisterAsync(
                _email.Trim(),
                _password,
                _username.Trim(),
                inviteCode);

            if (response is not null)
            {
                var userInfo = JwtParser.ParseUserInfoFromToken(response.AccessToken);
                AuthState.SetAuthenticated(response.AccessToken, userInfo);

                var returnUrl = AuthState.ConsumeReturnUrl() ?? "/";
                Navigation.NavigateTo(returnUrl, replace: true);
            }
            else
            {
                _errorMessage = "Registration failed. The email may already be in use, or the server rejected the request.";
            }
        }
        catch (Exception)
        {
            _errorMessage = "An unexpected error occurred. Please try again.";
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private void ClearUsernameError() => _usernameError = null;
    private void ClearEmailError() => _emailError = null;
    private void ClearPasswordError() => _passwordError = null;
    private void ClearConfirmPasswordError() => _confirmPasswordError = null;
    private void ClearInviteCodeError() => _inviteCodeError = null;

    private void TogglePasswordVisibility()
    {
        _showPassword = !_showPassword;
    }

    private void ToggleConfirmPasswordVisibility()
    {
        _showConfirmPassword = !_showConfirmPassword;
    }

    private void StartOAuth(string provider)
    {
        Navigation.NavigateTo($"api/auth/external/{provider}", forceLoad: true);
    }
}
